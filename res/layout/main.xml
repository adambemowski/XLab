        android:id="@+id/mapview"
        android:clickable="true"
        android:layout_below="@+id/mode_change"
        android:apiKey="0SSIxJTKJsHtMviGz2v6GmwC3iCtfX4ij1LMhog"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />  

</RelativeLayout>
