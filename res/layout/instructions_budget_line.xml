<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    >

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:orientation="vertical"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    >
	    
	    <TextView
	        android:id="@+id/text_top"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
			android:textStyle="italic"
			>
	    </TextView>
	    
	    <TextView
	        android:id="@+id/text_main_block_0"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        >
	    </TextView>
	    
	    <ImageView
			android:id="@+id/figure_1"
			android:src="@drawable/figure_1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:padding="2dp"
			android:scaleType="centerCrop"
			android:contentDescription="@string/figure_1_description"
			>
	    </ImageView>
	
	    <TextView
	        android:id="@+id/text_main_block_1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        >
	    </TextView>
	    
	    <ImageView
			android:id="@+id/figure_2"
			android:src="@drawable/figure_2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:scaleType="centerCrop"
			android:layout_gravity="center_horizontal"
			android:padding="2dp"
			android:contentDescription="@string/figure_2_description"
			>
	    </ImageView>
	
	    <TextView
	        android:id="@+id/text_main_block_2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        >
	    </TextView>
	    
	    <TextView
	        android:id="@+id/text_earnings_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:textStyle="bold"
			>
	    </TextView>
	    
	    <TextView
	        android:id="@+id/text_earnings_block_0"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        >
	    </TextView>
	    
	    <TextView
	        android:id="@+id/text_confidentiality_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:textStyle="bold"
			>
	    </TextView>
	    
	    <TextView
	        android:id="@+id/text_confidentiality_block_0"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        >
	    </TextView>
	    
	    <Button
			android:id="@+id/procede_button"
			android:text="Procede to Experiment"
			android:textSize="17dp"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center"
		/>
	    
	    <TextView
	        android:id="@+id/text_bottom"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        >
	    </TextView>
	    	    
	</LinearLayout>

</ScrollView>